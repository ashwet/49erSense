<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.raj.iot.SensorsFragment">


    <TextView
        android:text="     Open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/off"
        android:layout_alignLeft="@+id/on"
        android:layout_alignStart="@+id/on"
        android:id="@+id/textView16" />

    <TextView
        android:text="     Close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/off"
        android:layout_alignLeft="@+id/off"
        android:layout_alignStart="@+id/off"
        android:id="@+id/textView17" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/window_closed"
        android:id="@+id/off"
        android:layout_marginLeft="76dp"
        android:layout_marginStart="76dp"
        android:layout_alignTop="@+id/on"
        android:layout_toRightOf="@+id/on"
        android:layout_toEndOf="@+id/on" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/window_open"
        android:id="@+id/on"
        android:layout_marginTop="94dp"
        android:layout_marginLeft="71dp"
        android:layout_marginStart="71dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <RadioButton
            android:text="Door"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_door" />

        <RadioButton
            android:text="Window"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/window1" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="150dp">
        <RadioButton
            android:text="1st Floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:id="@+id/sensor_main" />

        <RadioButton
            android:text="2nd Floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/sensor_up" />
    </RadioGroup>

</RelativeLayout>
